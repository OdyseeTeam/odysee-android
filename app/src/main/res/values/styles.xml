<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.ToolBar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/actionBarForeground</item>
        <item name="android:textColorSecondary">@color/actionBarForeground</item>
        <item name="actionMenuTextColor">@color/actionBarForeground</item>
    </style>

    <style name="AppTheme.Small_Drawable">
        <item name="android:textSize">32sp</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="Claim_Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/claim_title_text_size</item>
        <item name="android:layout_marginEnd">@dimen/claim_listitem_title_margin_end</item>
    </style>
    <style name="Claim_Publisher">
        <item name="android:textSize">@dimen/claim_publisher_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
    <style name="Claim_Publisher_FileView">
        <item name="android:textSize">@dimen/claim_publisher_fileview_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Claim_Duration">
        <item name="android:textSize">@dimen/claim_duration_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Claim_Publish_Time">
        <item name="android:textSize">@dimen/claim_duration_text_size</item>
    </style>

    <style name="Claim_Fee">
        <item name="android:textSize">@dimen/claim_duration_text_size</item>
    </style>

    <style name="Comment_Publisher">
        <item name="android:textSize">@dimen/comment_publisher_textsize</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="VerificationButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
<!--        <item name="android:backgroundTint">@color/signin_background</item>-->
        <!--item name="android:backgroundTint">@color/colorPrimary</item-->
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Verification_Labels">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="Respost_info_Textviews">
        <item name="android:textColor">@color/lightForeground</item>
        <item name="textSize">@dimen/repost_info_textsize</item>
    </style>
    <style name="No_Content_To_Display">
        <item name="textSize">@dimen/no_content_to_display_textsize</item>
    </style>
    <style name="List_item_Layout">
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="OdyseeChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice"/>

    <style name="OdyseeMiniPlayer" parent="@style/Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>
