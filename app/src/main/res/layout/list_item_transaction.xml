<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/transaction_desc"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextView_Light"
            android:singleLine="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/transaction_amount"
            android:gravity="end"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextView_Light"
            android:singleLine="true"
            android:textSize="14sp"
            android:textAlignment="viewEnd"
            android:textDirection="ltr"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transaction_info_fee_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/transaction_claim"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextView_Light"
            android:singleLine="true"
            android:textColor="@color/odyseePink"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/transaction_fee"
            android:gravity="end"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextView_Light"
            android:singleLine="true"
            android:textColor="@color/lightGrey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/transaction_id_link"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextView_Light"
            android:singleLine="true"
            android:textColor="@color/odyseePink"
            android:textAlignment="viewStart" />
        <TextView
            android:id="@+id/transaction_date"
            android:gravity="end"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextView_Light"
            android:singleLine="true"
            android:textColor="@color/lightGrey"
            android:visibility="gone" />
        <TextView
            android:id="@+id/transaction_pending_text"
            android:gravity="end"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextView_Light"
            android:text="@string/pending"
            android:textColor="@color/lightGrey"
            android:singleLine="true"
            android:textStyle="italic"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>