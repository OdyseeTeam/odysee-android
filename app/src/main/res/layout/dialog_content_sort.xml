<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/sort_content_by"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/sort_by_trending_item"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp" android:focusable="true">
        <ImageView
            android:id="@+id/sort_by_trending_item_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_trending"
            app:tint="@color/foreground"/>
        <TextView
            style="@style/TextView_Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/sort_by_trending_item_icon"
            android:text="@string/trending_content"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/sort_by_trending_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/odyseePink" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sort_by_new_item"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" android:focusable="true">
        <ImageView
            android:id="@+id/sort_by_new_item_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_new"
            app:tint="@color/foreground" />
        <TextView
            android:layout_toEndOf="@+id/sort_by_new_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:text="@string/new_content"
            style="@style/TextView_Light"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/sort_by_new_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/odyseePink" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sort_by_top_item"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" android:focusable="true">
        <ImageView
            android:id="@+id/sort_by_top_item_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_top"
            app:tint="@color/foreground" />
        <TextView
            android:layout_toEndOf="@+id/sort_by_top_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:text="@string/top_content"
            style="@style/TextView_Light"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/sort_by_top_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/odyseePink" />
    </RelativeLayout>
</LinearLayout>